#!/bin/env perl

use strict;
use warnings;

my $metaspades = 'metaspades.py';
my $trimmomatic = '/home/mchevrette/builds/Trimmomatic-0.36/trimmomatic-0.36.jar';

my ($left, $right) = (shift, shift);
my ($left_pref, $right_pref) = ($left, $right);
$left_pref =~ s/\.f(ast)q$//;

## Trimmomatic
java -jar $trimmomatic PE -phred33 $left $right output_forward_paired.fq.gz output_forward_unpaired.fq.gz output_reverse_paired.fq.gz output_reverse_unpaired.fq.gz ILLUMINACLIP:TruSeq3-PE.fa:2:30:10 LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:36
